{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": false,
    "paths": {
      "/*": [
        "./*"
      ]
    },
    "plugins": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages",
    "build"
  ]
}
